{% extends 'base.html.twig' %}

{% block title %}Hello AddTaskController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div id="container">

    <div class="bd-example">
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="exampleModalLabel">New Task</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                    <div class="modal-body">
                        <form method="post" action="add">
                            <div class="form-group">
                                <label for="task-name" class="form-control-label">Task name:</label>
                                <input name="task_name" type="text" class="form-control" id="task-name" value="task">
                            </div>
                            <div class="form-group">
                                <label for="description" class="form-control-label">Description:</label>
                                <textarea class="form-control" name="task_description" id="task-description">Description
                                </textarea>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" id="send">Send message</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <div class="example-wrapper">



        <h1>Hello ! âœ…</h1>

        <table class="table" id="tasks">
            <thead>
            <tr>
                <th>To Do</th>
                <th>Description</th>
                <th scope="col">Status</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            </thead>
            <tbody>


            {% if tasks %}
                {% for task in tasks %}
                <tr>

                    <td>

                        {{ task.name }}

                    </td>
                    <td>{{ task.description }}</td>
                    <td>{{ task.status }}</td>
                    <td><button type="button" class="btn btn-secondary">Edit Task</button></td>
                    <td><button type="button" class="btn btn-danger">Delete Task</button></td>

            </tr>
                {% endfor %}
            {% endif %}
            </tbody>

        </table>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal"
                data-whatever="@mdo">Add Task</button>


        <br>

        This friendly message is coming from:
        git remote -v
        origin vladislavmarkotin

    </div>
</div>

{% endblock %}
